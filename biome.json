{
    "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noConsole": "error",
                "noExplicitAny": "warn"
            }
        }
    },
    "javascript": {
        "globals": [
            "describe",
            "test",
            "it",
            "expect",
            "beforeEach",
            "afterEach",
            "beforeAll",
            "afterAll",
            "vi"
        ],
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "overrides": [
        {
            "includes": ["**/__tests__/**", "**/*.test.ts", "**/*.spec.ts"],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noConsole": "off"
                    }
                }
            }
        }
    ]
}
